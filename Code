    //javascript
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const dropZone = document.getElementById('dropZone');
            const fileInput = document.getElementById('fileInput');
            const browseButton = document.getElementById('browseButton');
            const resultsCard = document.getElementById('resultsCard');
            const loadingIndicator = document.getElementById('loadingIndicator');
            const resultsContent = document.getElementById('resultsContent');
            const analyzeAnother = document.getElementById('analyzeAnother');
            const historyTable = document.getElementById('historyTable');
            const clearHistoryBtn = document.getElementById('clearHistory');
            const navLinks = document.querySelectorAll('.nav-link');
            const tabContents = document.querySelectorAll('.tab-content');
            
            let analysisHistory = JSON.parse(localStorage.getItem('resumeAnalysisHistory')) || [];
            
            updateHistoryTable();

            browseButton.addEventListener('click', () => fileInput.click());
            fileInput.addEventListener('change', handleFileSelect);
            analyzeAnother.addEventListener('click', resetUI);
            clearHistoryBtn.addEventListener('click', clearHistory);

            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const targetTab = this.getAttribute('data-bs-target');
      
                    navLinks.forEach(navLink => navLink.classList.remove('active'));
                    this.classList.add('active');
 
                    tabContents.forEach(tab => {
                        if (tab.id === targetTab) {
                            tab.style.display = 'block';
                        } else {
                            tab.style.display = 'none';
                        }
                    });
                });
            });

            ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                dropZone.addEventListener(eventName, preventDefaults, false);
            });
            
            function preventDefaults(e) {
                e.preventDefault();
                e.stopPropagation();
            }
            
            ['dragenter', 'dragover'].forEach(eventName => {
                dropZone.addEventListener(eventName, highlight, false);
            });
            
            ['dragleave', 'drop'].forEach(eventName => {
                dropZone.addEventListener(eventName, unhighlight, false);
            });
            
            function highlight() {
                dropZone.classList.add('dragover');
            }
            
            function unhighlight() {
                dropZone.classList.remove('dragover');
            }
            
            dropZone.addEventListener('drop', handleDrop, false);
            
            function handleDrop(e) {
                const dt = e.dataTransfer;
                const files = dt.files;
                if (files.length && files[0].type === 'application/pdf') {
                    handleFiles(files[0]);
                } else {
                    alert('Please upload a PDF file');
                }
            }
            
            function handleFileSelect(e) {
                const files = e.target.files;
                if (files.length && files[0].type === 'application/pdf') {
                    handleFiles(files[0]);
                } else {
                    alert('Please upload a PDF file');
                }
            }
            
            function handleFiles(file) {
                resultsCard.style.display = 'block';
                loadingIndicator.style.display = 'block';
                resultsContent.style.display = 'none';
                
                // API call 
                simulateAPICall(file);
            }
            
            function simulateAPICall(file) {
                // This is a simulation - in a real implementation, you would:
                // 1. Create a FormData object 
                // 2. Send a POST request to /upload-resume endpoint
                // 3. Process the response and display the results

                setTimeout(() => {
                    loadingIndicator.style.display = 'none';
                    resultsContent.style.display = 'block';
 
                    const useAI = Math.random() > 0.2;
 
                    const summary = useAI ? generateAISummary(file.name) : generateFallbackAnalysis(file.name);
                    const analysisType = useAI ? "AI Summary" : "Keyword Analysis";
 
                    document.getElementById('summaryText').textContent = summary;
 
                    const metadataList = document.getElementById('metadataList');
                    metadataList.innerHTML = `
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Filename
                            <span class="text-primary">${file.name}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Upload Date
                            <span class="text-primary">${new Date().toLocaleDateString()}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            File Size
                            <span class="text-primary">${(file.size / 1024).toFixed(2)} KB</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Analysis Type
                            <span class="badge ${useAI ? 'bg-success' : 'bg-warning'} rounded-pill">${analysisType}</span>
                        </li>
                    `;
                    

                    addToHistory(file.name, analysisType, summary);
                }, 2000);
            }
            
            function generateAISummary(filename) {
                if (filename.toLowerCase().includes('developer')) {
                    return "This resume demonstrates 5+ years of experience in full-stack development with expertise in JavaScript, Python, and cloud technologies. The candidate shows strong proficiency in React and Node.js with experience leading development teams on complex projects. Education includes a Bachelor's degree in Computer Science from a reputable university. Key strengths include problem-solving abilities and experience with agile development methodologies.";
                } else if (filename.toLowerCase().includes('designer')) {
                    return "This portfolio showcases strong skills in UI/UX design with proficiency in Figma, Adobe Creative Suite, and prototyping tools. The designer has experience working with cross-functional teams and has contributed to several successful product launches. Demonstrates a strong understanding of user-centered design principles and has experience conducting user research and usability testing.";
                } else if (filename.toLowerCase().includes('manager')) {
                    return "This resume highlights 8+ years of project management experience with PMP certification and expertise in Agile methodologies. The candidate has successfully led teams of 15+ people and managed budgets exceeding $2M. Strong communication skills and experience with risk management and stakeholder engagement are evident.";
                } else {
                    return "This resume demonstrates strong qualifications with extensive experience in the field. The candidate possesses excellent communication skills and a proven track record of success. Education and certifications align well with industry requirements. Key strengths include leadership abilities and a results-oriented approach to problem-solving.";
                }
            }
            
            function generateFallbackAnalysis(filename) {
                if (filename.toLowerCase().includes('developer')) {
                    return "Top keywords: JavaScript, Python, React, Node.js, API, Development, Database, Git, Agile, Full-stack";
                } else if (filename.toLowerCase().includes('designer')) {
                    return "Top keywords: UI, UX, Design, Figma, Adobe, Prototype, User Research, Wireframes, Visual Design, Typography";
                } else if (filename.toLowerCase().includes('manager')) {
                    return "Top keywords: Project Management, Leadership, Agile, Budget, Team, Stakeholder, Strategy, Planning, Risk Management, Communication";
                } else {
                    return "Top keywords: Experience, Management, Communication, Leadership, Development, Strategy, Analysis, Problem-solving, Teamwork, Results";
                }
            }
            
            function addToHistory(filename, analysisType, summary) {
                const historyItem = {
                    id: Date.now(),
                    filename,
                    date: new Date().toLocaleString(),
                    analysisType,
                    summary
                };

                analysisHistory.unshift(historyItem);

                if (analysisHistory.length > 10) {
                    analysisHistory = analysisHistory.slice(0, 10);
                }

                localStorage.setItem('resumeAnalysisHistory', JSON.stringify(analysisHistory));
                updateHistoryTable();
            }
            
            function updateHistoryTable() {
                if (analysisHistory.length === 0) {
                    historyTable.innerHTML = '<tr><td colspan="4" class="text-center py-4">No history available yet.</td></tr>';
                    return;
                }
                
                historyTable.innerHTML = '';
                analysisHistory.forEach(item => {
                    const row = document.createElement('tr');
                    row.className = 'history-item';
                    row.innerHTML = `
                        <td>${item.filename}</td>
                        <td>${item.date}</td>
                        <td><span class="badge ${item.analysisType === 'AI Summary' ? 'bg-success' : 'bg-warning'}">${item.analysisType}</span></td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary view-item" data-id="${item.id}">View</button>
                            <button class="btn btn-sm btn-outline-danger delete-item" data-id="${item.id}">Delete</button>
                        </td>
                    `;
                    historyTable.appendChild(row);
                });

                document.querySelectorAll('.view-item').forEach(btn => {
                    btn.addEventListener('click', function() {
                        const id = parseInt(this.getAttribute('data-id'));
                        viewHistoryItem(id);
                    });
                });
                
                document.querySelectorAll('.delete-item').forEach(btn => {
                    btn.addEventListener('click', function() {
                        const id = parseInt(this.getAttribute('data-id'));
                        deleteHistoryItem(id);
                    });
                });
            }
            
            function viewHistoryItem(id) {
                const item = analysisHistory.find(i => i.id === id);
                if (!item) return;
 
                document.querySelector('[data-bs-target="upload-tab"]').click();

                resultsCard.style.display = 'block';
                loadingIndicator.style.display = 'none';
                resultsContent.style.display = 'block';

                document.getElementById('summaryText').textContent = item.summary;
                
                const metadataList = document.getElementById('metadataList');
                metadataList.innerHTML = `
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Filename
                        <span class="text-primary">${item.filename}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Upload Date
                        <span class="text-primary">${item.date}</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Analysis Type
                        <span class="badge ${item.analysisType === 'AI Summary' ? 'bg-success' : 'bg-warning'} rounded-pill">${item.analysisType}</span>
                    </li>
                `;
            }
            
            function deleteHistoryItem(id) {
                analysisHistory = analysisHistory.filter(item => item.id !== id);
                localStorage.setItem('resumeAnalysisHistory', JSON.stringify(analysisHistory));
                updateHistoryTable();
            }
            
            function clearHistory() {
                if (confirm('Are you sure you want to clear all history?')) {
                    analysisHistory = [];
                    localStorage.removeItem('resumeAnalysisHistory');
                    updateHistoryTable();
                }
            }
            
            function resetUI() {
                resultsCard.style.display = 'none';
                fileInput.value = '';
            }
        });
    </script>
</body>
</html>
