                <div class="tab-content active" id="upload-tab">
                    <div class="row">
                        <div class="col-lg-8 mx-auto">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <h3 class="card-title text-center mb-4">
                                        <i class="fas fa-cloud-upload-alt feature-icon"></i><br>
                                        Upload Resume PDF
                                    </h3>
                                    <div class="upload-area" id="dropZone">
                                        <i class="fas fa-file-pdf display-4 text-danger mb-3"></i>
                                        <h5>Drag & Drop your PDF here</h5>
                                        <p class="text-muted">or</p>
                                        <input type="file" id="fileInput" accept=".pdf" hidden>
                                        <button class="btn btn-primary btn-lg" id="browseButton">
                                            <i class="fas fa-folder-open me-2"></i>Browse Files
                                        </button>
                                    </div>
                                    <div class="mt-3 text-center">
                                        <small class="text-muted">Supported format: PDF (max 10MB)</small>
                                    </div>
                                </div>
                            </div>

                            <div class="card" id="resultsCard" style="display: none;">
                                <div class="card-header bg-success text-white">
                                    <h5 class="mb-0">Analysis Results</h5>
                                </div>
                                <div class="card-body">
                                    <div id="loadingIndicator" class="text-center py-4">
                                        <div class="spinner-border text-primary spinner" role="status">
                                            <span class="visually-hidden">Loading...</span>
                                        </div>
                                        <p class="mt-3">Processing your document with AI...</p>
                                    </div>
                                    <div id="resultsContent" style="display: none;">
                                        <h6>Document Summary:</h6>
                                        <div class="insight-box mb-4">
                                            <p id="summaryText">No summary available.</p>
                                        </div>
                                        <h6>Metadata:</h6>
                                        <ul class="list-group mb-4" id="metadataList">
                                        </ul>
                                        <div class="text-center mt-4">
                                            <button class="btn btn-outline-primary" id="analyzeAnother">
                                                <i class="fas fa-redo me-2"></i>Analyze Another Document
                                            </button>
                                        </div>
